{
  "name": "mono",
  "packageManager": "bun@1.2.15",
  "engines": {
    "node": ">=22.16.0 <23",
    "bun": ">=1.2.15 <2"
  },
  "scripts": {
    "dev": "bun i && turbo dev",
    "gen": "bun run tools/script-bun/src/gen.ts",
    "build": "bun i && turbo build",
    "lint": "turbo lint",
    "check": "bun run tools/script-bun/src/update-ts-references.ts --ignoreReferencePaths ./tsconfig.build.json && bun tsc -b",
    "tsc": "tsc -b --incremental --extendedDiagnostics",
    "tsc:dry": "tsc -b --incremental --extendedDiagnostics --dry",
    "build:bunup": "bunup --config ./tools/bunup/bunup.config.ts && bun check",
    "reinstall": "bun run tools/script-bun/src/delete-tmp-files-dirs.ts . && bun pm cache rm && bun i",
    "test:dev": "bun i && turbo dev --filter=!@mono/redwood-sdk",
    "test:build": "bun i && turbo build --filter=!@mono/redwood-sdk",
    "test:lint": "bun i && turbo lint --filter=!@mono/redwood-sdk",
    "test:check": "bun i && turbo check --filter=!@mono/redwood-sdk",
    "test:tsc": "bun i && turbo tsc --filter=!@mono/redwood-sdk"
  },
  "workspaces": {
    "packages": [
      "tools/*",
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@types/bun": "^1.2.15",
      "@types/node": "^22.15.29",
      "@types/react-dom": "^19.1.6",
      "@types/react": "^19.1.6",
      "bunup": "^0.8.25",
      "rwsdk": "^0.1.0-alpha.4",
      "react": "^19.1.0",
      "react-dom": "^19.1.0",
      "typescript": "^5.8.3",
      "vite": "^6.3.5",
      "wrangler": "^4.19.1"
    }
  },
  "dependencies": {
    "turbo": "^2.5.4"
  },
  "version": "0.0.0"
}