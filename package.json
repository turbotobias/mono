{
  "name": "mono",
  "scripts": {
    "dev": "update-ts-references && tsc -b --extendedDiagnostics",
    "build:bunup": "bunup --config ./internals/config-bunup/bunup.config.ts && update-ts-references && tsc --extendedDiagnostics",
    "postinstall": "update-ts-references"
  },
  "engines": {
    "node": "22.16.0",
    "bun": ">=1.2.15 <2"
  },
  "workspaces": {
    "packages": [
      "internals/*",
      "outputs/*",
      "sources/*"
    ],
    "catalog": {
      "@types/bun": "^1.2.15",
      "bunup": "^0.8.25",
      "typescript": "^5.8.3",
      "vite": "^6.3.5"
    }
  },
  "devDependencies": {
    "@/config-bunup": "workspace:*",
    "@/script-bun": "workspace:*",
    "update-ts-references": "^3.6.0"
  },
  "version": "0.0.0"
}