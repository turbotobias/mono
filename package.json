{
  "name": "mono",
  "packageManager": "bun@1.2.15",
  "engines": {
    "node": "22.16.0",
    "bun": ">=1.2.15 <2"
  },
  "scripts": {
    "dev": "update-ts-references && turbo dev",
    "build": "update-ts-references && turbo build",
    "lint": "turbo lint",
    "postinstall": "bun check",
    "check:old": "bun check && bun tsc",
    "check": "update-ts-references",
    "tsc": "tsc -b --incremental",
    "build:bunup": "bunup --config ./tooling/bunup/bunup.config.ts && bun check-types"
  },
  "workspaces": {
    "packages": [
      "tooling/*",
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@types/bun": "^1.2.15",
      "@types/node": "^22.15.29",
      "bunup": "^0.8.25",
      "typescript": "^5.8.3",
      "vite": "^6.3.5",
      "wrangler": "^4.19.1",
      "rwsdk": "^0.1.0-alpha.3"
    }
  },
  "dependencies": {
    "@mono/tsconfig": "workspace:*",
    "turbo": "^2.5.4",
    "update-ts-references": "^3.6.0"
  },
  "version": "0.0.0"
}