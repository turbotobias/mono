{
  "name": "mono",
  "scripts": {
    "dev": "turbo dev",
    "lint": "turbo lint",
    "postinstall": "bun check-types",
    "check-types": "tsc -b --incremental --extendedDiagnostics && update-ts-references",
    "build:bunup": "bunup --config ./configs/config-bunup/bunup.config.ts && bun check-types"
  },
  "packageManager": "bun@1.2.15",
  "engines": {
    "node": "22.16.0",
    "bun": ">=1.2.15 <2"
  },
  "workspaces": {
    "packages": [
      "configs/*",
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@types/bun": "^1.2.15",
      "bunup": "^0.8.25",
      "typescript": "^5.8.3",
      "vite": "^6.3.5"
    }
  },
  "devDependencies": {
    "@mono/config-bunup": "workspace:*",
    "@mono/config-tsconfig": "workspace:*",
    "@mono/script-bun": "workspace:*",
    "turbo": "^2.5.4",
    "update-ts-references": "^3.6.0"
  },
  "version": "0.0.0"
}