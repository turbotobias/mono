{
  "extends": "../../tools/tsconfig/apps.json",
  "exclude": [
    "node_modules",
    "dist",
    ".wrangler",
    ".turbo",
    "*.tsbuildinfo"
  ],
  "include": [
    "vite.config.mts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "references": [
    {
      "path": "../../packages/utils"
    }
  ],
  "compilerOptions": {
    "types": [
      "./types/worker.d.ts",
      "./types/rw.d.ts",
      "./types/vite.d.ts"
    ],
    "paths": {
      "~/*": [
        "./src/app/*"
      ]
    }
  }
}